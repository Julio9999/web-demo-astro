---
import type { Product } from "@/shared/interfaces/product/product.interface";

const { product } = Astro.props as { product: Product };
---

<div class="flex flex-col">
  <a class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-xl transition p-4 flex flex-col cursor-pointer" href={`products/${product.id}`}>
     <img src={product.images[0]}  alt="A description of my image." class="h-52 w-full" /> 
    <h3 class="text-lg font-semibold text-gray-800">{product.name}</h3>
    {product.description && (
      <p class="text-gray-500 text-sm mt-1">{product.description}</p>
    )}
    <p class="font-bold text-gray-900 mt-2">Precio: {product.price.toFixed(2)}</p>
  </a>
  <button class="mt-3 bg-primary text-white py-2 px-4 rounded-3xl hover:opacity-85 transition cursor-pointer">
    Agregar al carrito
  </button>

</div>
