---
import { Picture } from 'astro:assets';
import type { Product } from '../interfaces/product/product.interface';


const { product } = Astro.props as { product: Product };
import myImage from '../assets/torta.jpg';
---

<div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-xl transition p-4 flex flex-col">
   <Picture src={myImage} formats={['avif', 'webp']} alt="A description of my image." />
  <h3 class="text-lg font-semibold text-gray-800">{product.name}</h3>
  {product.description && (
    <p class="text-gray-500 text-sm mt-1">{product.description}</p>
  )}
  <p class="font-bold text-gray-900 mt-2">${product.price.toFixed(2)}</p>
  <button class="mt-3 bg-primary text-white py-2 px-4 rounded-3xl hover:opacity-85 transition cursor-pointer">
    Agregar
  </button>
</div>
