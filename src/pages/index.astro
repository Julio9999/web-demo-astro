---
export const prerender = false;
import Footer from '../components/footer.astro';
import ProductSection from '../components/product-section.astro';
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";

const currentTime = new Date().toLocaleTimeString();

Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, s-maxage=31536000, stale-while-revalidate=0"
);

// Header espec√≠fico de Netlify CDN para cache en el Edge
Astro.response.headers.set("netlify-cache-tag", "products");
---

<Layout>
	<main class="flex-1">
		<ProductSection />
		<h1>The current time is: {currentTime}</h1>
	</main>
	<Footer />
</Layout>
